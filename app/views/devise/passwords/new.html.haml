= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :post, class: 'form-forgot-password-heading', role: 'form' }) do |f|
  %h2.form-signin-heading ¿Olvidaste tu contraseña?
  = f.error_notification
  = f.email_field :email, autofocus: true, class: 'form-control', autofocus: "", placeholder: "Correo electrónico", type: "text"
  %br
  %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Enviarme instrucciones para reiniciar contraseña
= render "devise/shared/links"
