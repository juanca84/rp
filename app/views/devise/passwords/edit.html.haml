  = f.password_field :password, class: 'form-control', placeholder: "Nueva constrase単a", type: "password"
  = f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirmar su nueva contrase単a", type: "password"
  %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Cambiar mi contrase単a
