.well.form-actions
  = search_form_for @q, url: reports_path, html: { class: 'form-horizontal', role: 'form' } do |f|
    .form-group
      %label.string.optional.control-label.col-sm-1 Código
      .col-sm-2
        = f.text_field :code_eq, class: 'form-control'

      %label.string.optional.control-label.col-sm-1 Titular
      .col-sm-5
        = f.text_field :holders_person_name_cont, class: 'form-control'

      %label.sring.optional.control-label.col-sm-1 Identificación
      .col-sm-2
        = f.text_field :holders_person_identification_cont, class: 'form-control'

    .form-group
      %label.string.optional.control-label.col-sm-1 Departamento
      .col-sm-3
        = f.select :lands_department_id_eq, options_from_collection_for_select(@departments, :id, :name, params[:q].present? && params[:q][:lands_department_id_eq]), { include_blank: true  }, class: 'select form-control'

      %label.string.optional.control-label.col-sm-1 Municipio
      .col-sm-3
        = f.select :lands_community_id_eq, options_from_collection_for_select(@communities, :id, :name, params[:q].present? && params[:q][:lands_community_id_eq]), { include_blank: true  }, class: 'select form-control'     

    .form-group
      %label.string.optional.control-label.col-sm-1 Asociación
      .col-sm-4
        = f.text_field :partnerships_name_cont, class: 'form-control'

    .form-group
      = f.submit "Buscar", class: 'btn btn-success pull-right', style: "margin-right: 17px;margin-top: 10px;"